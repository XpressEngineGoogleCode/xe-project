<query id="getDirectoryNewsList" action="select">
    <tables>
        <table name="project_news" alias="news"/>
        <table name="projects" alias="projects"/>
        <table name="sites" alias="sites"/>
        <table name="project_dir_maps" />
    </tables>
    <columns>
        <column name="news.*" />
        <column name="projects.site_srl" alias="site_srl" />
        <column name="projects.title" alias="project_title" />
        <column name="projects.description" alias="project_description" />
        <column name="sites.domain" alias="domain" />
        <column name="sites.regdate" alias="regdate" />
    </columns>
    <conditions>
        <condition operation="equal" column="project_dir_maps.project_dir_srl" var="project_dir_srl" filter="number" notnull="notnull" />
        <condition operation="equal" column="news.site_srl" default="project_dir_maps.site_srl" filter="number" pipe="and" />
        <condition operation="equal" column="projects.site_srl" default="news.site_srl" filter="number" pipe="and" />
        <condition operation="equal" column="sites.site_srl" default="projects.site_srl" filter="number" pipe="and" />
        <group pipe="and">
            <condition operation="like" column="news.title" var="search_keyword" />
            <condition operation="like" column="news.content" var="search_keyword" pipe="or"/>
        </group>
    </conditions>
    <navigation>
        <index var="sort_index" default="news.list_order" order="asc" />
        <list_count var="list_count" default="20" />
        <page_count var="page_count" default="10" />
        <page var="page" default="1" />
    </navigation>
</query>
